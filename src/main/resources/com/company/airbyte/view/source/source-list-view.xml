<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      messagesGroup="com.company.airbyte.view.source"
      title="msg://sourceListView.title"
      focusComponent="sourcesDataGrid">
    <data>
        <collection id="sourcesDc"
                    class="com.company.airbyte.entity.Source">
            <fetchPlan extends="_base"/>
            <loader id="sourcesDl" readOnly="true">
                <query>
                    <![CDATA[select e from Source e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="sourcesDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <dropdownButton id="createBtn" icon="PLUS" text="msg://sourceListView.createButton" themeNames="primary, error" >
                <items>
                    <actionItem id="createDb"   ref="sourcesDataGrid.createDb"/>
                    <actionItem id="createFile" ref="sourcesDataGrid.createFile"/>
                    <actionItem id="createApi"  ref="sourcesDataGrid.createApi"/>
                </items>
            </dropdownButton>
            <button id="editButton" action="sourcesDataGrid.editAction"/>
            <button id="refreshButton" action="sourcesDataGrid.refreshAction"/>
            <button id="removeButton" action="sourcesDataGrid.removeAction"/>
            <simplePagination id="pagination" dataLoader="sourcesDl"/>
        </hbox>
        <dataGrid id="sourcesDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="sourcesDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="createDb"   text="msg://sourceListView.createDb"/>
                <action id="createFile" text="msg://sourceListView.createFile"/>
                <action id="createApi"  text="msg://sourceListView.createApi"/>
                <action id="editAction" type="list_edit"/>
                <action id="refreshAction" type="list_refresh"/>
                <action id="removeAction" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="name"/>
                <column property="sourceType"/>
                <column property="dataFormat"/>
                <column property="providerUnit"/>
                <column property="lastModifiedDate"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
